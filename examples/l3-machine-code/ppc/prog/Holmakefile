INCLUDES = $(HOLDIR)/examples/machine-code/hoare-triple ../step ../../common
CLINE_OPTIONS = --qof

ifdef POLY
HOLHEAP = ppc-step-heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

BARE_THYS = ../step/ppc_stepLib ../../common/stateLib
DEPS = $(patsubst %,%.uo,$(BARE_THYS))

all: $(DEFAULT_TARGETS) $(HOLHEAP)
.PHONY: all

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b ../step/ppc-heap -o $(HOLHEAP) $(BARE_THYS)

endif
